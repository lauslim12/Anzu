{
  "name": "anzu",
  "version": "2.2.4",
  "description": "A LINE chatbot to schedule and remind you of your tasks",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "clean-docs": "rimraf ./docs/.vuepress/dist",
    "circular-check": "dpdm --tree --circular --warning ./**/*.ts",
    "format-check": "prettier --check ./**/*.ts",
    "eslint-check": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "lint": "yarn format-check && yarn type-check && yarn-eslint-check",
    "docs-dev": "vuepress dev ./docs",
    "docs-build": "vuepress build ./docs",
    "start": "node ./dist",
    "build": "yarn clean && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lauslim12/anzu.git"
  },
  "author": "Nicholas (https://www.nicholasdw.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lauslim12/anzu/issues"
  },
  "homepage": "https://lauslim12.github.io/anzu/",
  "dependencies": {
    "@line/bot-sdk": "^7.4.0",
    "@types/hpp": "^0.2.2",
    "@types/morgan": "^1.9.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "mongoose": "^6.0.13",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.11.10",
    "@types/node-cron": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vuepress/plugin-pwa": "^2.0.0-beta.27",
    "dpdm": "^3.8.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.2",
    "vuepress": "^2.0.0-beta.27"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base",
      "prettier",
      "plugin:node/recommended",
      "plugin:security/recommended"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "@typescript-eslint/lines-between-class-members": [
        "error",
        "always",
        {
          "exceptAfterSingleLine": true
        }
      ],
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-duplicates": "error",
      "node/no-unsupported-features/es-syntax": [
        "error",
        {
          "ignores": [
            "modules"
          ]
        }
      ],
      "node/no-missing-import": "off"
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "project": "./tsconfig.json"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80,
    "endOfLine": "lf"
  },
  "engines": {
    "node": "16.x"
  }
}
